<div class="lists">
  <h1>Lists</h1>
  <% @lists.each do |list| %>
  <li>
    <%= list.name %>
    <%= link_to "Details", list_path(list) %>
    <%= link_to "Remove", list_path(list), method: :delete, data: { confirm: "Are you sure you want to remove this list?"}, class: "btn btn-danger" %>
  </li>
  <% end %>
  <p><%= link_to "Add new list", new_list_path, class: "btn btn-primary" %></p>

</div>
