<div class="lists">
  <h1>Lists</h1>
  <% @lists.each do |list| %>
  <li>
    <%= list.name %>
    <%= link_to "Details", list_path(list), class: "btn btn-secondary" %>
    <%= link_to "Remove", list_path(list), method: :delete, data: { confirm: "Are you sure you want to remove this list?"}, class: "btn btn-danger" %>
  </li>
  <% end %>
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal">Add a List</button>
  <div id="modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Add a List</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <%= simple_form_for [@user, @list] do |f| %>
            <%= f.label :name  %>
            <%= f.text_field :name %>

            <%= f.submit %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- <p><%= link_to "Add new list", new_list_path, class: "btn btn-primary" %></p> -->

</div>
