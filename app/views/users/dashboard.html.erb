<div class="container-fluid">
  <h1>Lists</h1>
  <% @lists.each do |list| %>
  <div class="row">
    <i class="fas fa-circle"></i>
    <div class="col">
    <h4><%= list.name %></h4>
    </div>

    <div class="w-100"></div>

    <div class="col">
    <%= link_to "Details", list_path(list), class: "btn btn-secondary" %>

    <%= link_to "Remove", list_path(list), method: :delete, data: { confirm: "Are you sure you want to remove this list?"}, class: "btn btn-danger" %>
    </div>

  </div>
  <% end %>
  <div class="row">
    <p><%= link_to "Add new list", new_list_path, class: "btn btn-primary" %></p>
  </div>

</div>
